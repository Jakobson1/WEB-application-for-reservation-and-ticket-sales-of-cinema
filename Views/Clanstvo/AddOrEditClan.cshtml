@model BioskopProjekat.Models.Clanstvo
@{
    Layout = null;
}

@using (Html.BeginForm("AddOrEditClan", "Clanstvo", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.IDClan)
    <div class="form-group">
        @Html.LabelFor(model => model.Ime, new { @class = "control-label" })
        @Html.EditorFor(model => model.Ime, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Ime)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Prezime, new { @class = "control-label" })
        @Html.EditorFor(model => model.Prezime, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Prezime)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Telefon, new { @class = "control-label" })
        @Html.EditorFor(model => model.Telefon, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.BrLicne, new { @class = "control-label" })
        @Html.EditorFor(model => model.BrLicne, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        
        @Html.DropDownList("Paket", new List<SelectListItem>
    {
    new SelectListItem{Text= "STANDARD", Value="STANDARD"},
    new SelectListItem{Text= "SILVER", Value="SILVER"},
    new SelectListItem{Text= "GOLD", Value="GOLD"}
    }, "ODABERI PAKET")

</div>
    <div class="form-group">

        @Html.LabelFor(model => model.ClanInfo, new { @class = "control-label" })
        <div class="input-group">
            <span class="input-group-addon">#</span>
            @Html.EditorFor(model => model.ClanInfo, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Potvrdi" class="btn btn-primary" />
        <input type="reset" value="Izbrisi" class="btn" />
    </div>
}

