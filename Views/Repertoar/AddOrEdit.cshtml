@model BioskopProjekat.Models.Film
@{
    Layout = null;
}


@using (Html.BeginForm("AddOrEdit", "Repertoar", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.IDFilm)
    <div class="form-group">
        @Html.LabelFor(model=> model.Ime, new { @class = "control-label" })
        @Html.EditorFor(model => model.Ime, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Ime)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Vreme, new { @class = "control-label" })
        @Html.EditorFor(model => model.Vreme, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Vreme)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Datum, new { @class = "control-label" })
        @Html.EditorFor(model => model.Datum, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Opis, new { @class = "control-label" })
        @Html.EditorFor(model => model.Opis, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">

        @Html.LabelFor(model => model.Cena, new { @class = "control-label" })
        <div class="input-group">
            <span class="input-group-addon">$</span>
            @Html.EditorFor(model => model.Cena, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Potvrdi" class="btn btn-primary" />
        <input type="reset" value="Izbrisi" class="btn" />
    </div>
}