@model BioskopProjekat.Models.Rezervacija
@{
    ViewBag.Title = "AddOrEditRez";
}

@using (Html.BeginForm("AddOrEditRez", "Rezervacije", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.IDRez)
    <div class="form-group">
        @Html.LabelFor(model => model.Ime, new { @class = "control-label" })
        @Html.EditorFor(model => model.Ime, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Ime)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Prezime, new { @class = "control-label" })
        @Html.EditorFor(model => model.Prezime, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Prezime)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Telefon, new { @class = "control-label" })
        @Html.EditorFor(model => model.Telefon, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.BrKarata, new { @class = "control-label" })
        @Html.EditorFor(model => model.BrKarata, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">

        @Html.LabelFor(model => model.MestaSed, new { @class = "control-label" })
        @Html.EditorFor(model => model.MestaSed, new { htmlAttributes = new { @class = "form-control" } })
        
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.ImeFilma, new { @class = "control-label" })
        @Html.EditorFor(model => model.ImeFilma, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">

        @Html.LabelFor(model => model.CenaKarte, new { @class = "control-label" })
        <div class="input-group">
            <span class="input-group-addon">$</span>
            @Html.EditorFor(model => model.CenaKarte, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Potvrdi" class="btn btn-primary" />
        <input type="reset" value="Izbrisi" class="btn" />
    </div>
}

